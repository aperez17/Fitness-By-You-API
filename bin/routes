# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /es/stats        @controllers.ElasticController.getStats()

GET     /api/workouts/hardcoded @controllers.WorkoutController.getHardcoded()
GET     /api/workouts/:id       @controllers.WorkoutController.get(id: String)
POST    /api/workouts/populate  @controllers.WorkoutController.populate()
GET     /api/workouts           @controllers.WorkoutController.search(q: String)
POST    /api/workouts            @controllers.WorkoutController.createWorkout()
